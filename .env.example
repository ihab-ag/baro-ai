# LLM Provider (choose 'groq' or 'openai')
LLM_PROVIDER=groq

# Groq Configuration (FREE!)
# Get your API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# OpenAI Configuration (requires credits)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Telegram Bot Configuration
# Create a bot at: https://t.me/BotFather
# Send: /newbot
# Copy the token and paste it here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Supabase Configuration (for data persistence)
# Get your keys at: https://supabase.com → Your Project → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# WhatsApp Configuration (optional)
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_WEBHOOK_URL=

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
